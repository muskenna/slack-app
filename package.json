{
  "name": "devex-slack-bot",
  "version": "1.0.0",
  "description": "Slack bot for auto response to DevEx team related questions",
  "author": "DevEx Group",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc && node src/scripts/copy-config.js",
    "start": "node dist/main.js",
    "start:debug": "node --inspect -r ts-node/register src/main.ts"
  },
  "dependencies": {
    "@slack/bolt": "^3.17.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.7",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "src/modules/*",
      "src/config/*",
      "src/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}